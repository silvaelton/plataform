.row
 .col-md-12
  = simple_form_for @branch_line, remote: true do |f|
   .row
    .col-md-12
     = f.label :name, class: 'fg-label'
     = f.input :name, label: false, input_html: { placeholder: 'Digite um local'}
   .row
    .col-md-12
     = f.label :code, class: 'fg-label'
     = f.input :code, label: false, input_html: { placeholder: 'Digite um ramal'}
   .row
    .col-md-12
     = f.label :status, class: 'fg-label'
     = f.input :status, label: false, wrapper_html: { class: 'options' }
   .row
    .col-md-12
     = f.submit :submit, class: 'btn btn-success'
   %br/
