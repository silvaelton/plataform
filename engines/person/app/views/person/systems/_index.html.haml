- @systems.each_with_index do |j, i|
 %tr
  %td.col-md-1
   = i + 1
  %td
   = j.name
  %td
   = j.code
  %td
   = j.status
  %td.col-md-2
   = link_to "", new_system_system_permission_path(j),title: 'Nova Ação', 'data-toggle' => 'tooltip',  remote: true, class: 'md-arrow-forward btn btn-success waves-effect waves-button waves-float'
   = link_to "", edit_system_path(j), remote: true, class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float'
   = link_to "", system_path(j), method: :delete, class: 'md-highlight-remove btn btn-danger waves-effect waves-button waves-float', data: {confirm: "#{t(:confirm_delete)}"}
