.card
  .card-header.ch-alt
    %h2
      Menus
      = link_to 'Nova Categoria', new_nav_category_path, class: 'btn btn-success pull-right'
      %small Listagem de pÃ¡ginas
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table
      %thead
        %tr
          %th #
          %th Title
          %th Publish
          %th{:colspan => "3"} Actions

      %tbody
        - @nav_categories.each_with_index do |nav, i|
          %tr
            %td= i + 1
            %td= nav.name
            %td= nav.status
            %td.col-md-2
              = link_to '', edit_nav_category_path(nav), class: 'md md-edit btn btn-primary'
              = link_to '', nav, class: 'md md-delete btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }
