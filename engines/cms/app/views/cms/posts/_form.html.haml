= simple_form_for(@post) do |f|
  .col-md-12
    .card
      .card-body.card-padding
        .row
          .col-md-12
            = f.label :title, class: 'fg-label'
            = f.input :title, label: false, input_html: { placeholder: 'Digite um titulo'}
        .row
          .col-md-12
            = f.label :content, class: 'fg-label'
            = f.input :content, label: false, input_html: { placeholder: 'Digite um conteúdo'}
        .row
          .col-md-12
            = f.label :post_category, class: 'fg-label'
            = f.association :post_category, label: false, prompt: 'Selecione...'
        .row
          .col-md-12
            = f.label :thumb, as: 'file', class: 'fg-label'
            = f.input :thumb, as: 'file', label: false, input_html: { placeholder: 'Selecione'}
        .row
          .col-md-12
            = f.label :slider, class: 'fg-label'
            = f.input :custom_field, class: 'toggle-switch', :label => false do
              = check_box_tag :slider
              %label{:for => 'slider', :class => 'ts-helper'}
        .row
          .col-md-12
            = f.label :resume, class: 'fg-label'
            = f.input :resume, label: false, input_html: { placeholder: 'Digite um conteúdo'}
        .row
          .col-md-12
            = f.label :date, class: 'fg-label'
            = f.input :date, label: false
        .row
          .col-md-12
            = f.label :publish, class: 'fg-label'
            = f.input :custom_field, class: 'toggle-switch', :label => false do
              = check_box_tag :publish
              %label{:for => 'publish', :class => 'ts-helper'}
        .row
          .col-md-12
            = f.button :button, class: 'btn btn-success' do
              Enviar
            = link_to 'Back', posts_path , class: 'btn btn-danger'
