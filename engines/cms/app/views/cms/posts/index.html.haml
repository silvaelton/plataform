.block-header
  %h2 Posts
.row
  .col-md-12
    .card
      .card-header
        = link_to 'New Post', new_post_path, class: 'btn btn-primary pull-right'
        #data-table-command-header.bootgrid-header.container-fluid
          .row
            .col-sm-12.actionBar
              .search.form-group
                .input-group
                  %span.md.icon.input-group-addon.glyphicon-search
                  %input.search-field.form-control{:placeholder => "Search", :type => "text"}/
              .actions.btn-group
                .dropdown.btn-group
                  %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                    %span.dropdown-text 10
                    %span.caret
                  %ul.dropdown-menu.pull-right{:role => "menu"}
                    %li.active{"aria-selected" => "true"}
                      %a.dropdown-item.dropdown-item-button{:href => "#10"} 10
                    %li{"aria-selected" => "false"}
                      %a.dropdown-item.dropdown-item-button{:href => "#25"} 25
                    %li{"aria-selected" => "false"}
                      %a.dropdown-item.dropdown-item-button{:href => "#50"} 50
                    %li{"aria-selected" => "false"}
                      %a.dropdown-item.dropdown-item-button{:href => "#-1"} All
                .dropdown.btn-group
                  %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
                    %span.dropdown-text
                      %span.md.icon.md-view-module
                    %span.caret
                  %ul.dropdown-menu.pull-right{:role => "menu"}
                    %li
                      .checkbox
                        %label.dropdown-item
                          %input.dropdown-item-checkbox{:checked => "checked", :name => "id", :type => "checkbox", :value => "1"}/
                          %i.input-helper
                          ID
                    %li
                      .checkbox
                        %label.dropdown-item
                          %input.dropdown-item-checkbox{:checked => "checked", :name => "sender", :type => "checkbox", :value => "1"}/
                          %i.input-helper
                          Sender
                    %li
                      .checkbox
                        %label.dropdown-item
                          %input.dropdown-item-checkbox{:checked => "checked", :name => "received", :type => "checkbox", :value => "1"}/
                          %i.input-helper
                          Received
                    %li
                      .checkbox
                        %label.dropdown-item
                          %input.dropdown-item-checkbox{:checked => "checked", :name => "commands", :type => "checkbox", :value => "1"}/
                          %i.input-helper
                          Commands

          %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table
            %thead
              %tr
                %th #
                %th Title
                %th Post category
                %th Publish
                %th{:colspan => '3'} Action

            %tbody
              - @posts.each_with_index do |post, i|
                %tr
                  %td= i+1
                  %td= post.title
                  %td= post.post_category.name
                  %td= post.publish
                  %td.col-md-2
                    = link_to '', edit_post_path(post), class: 'md md-edit btn btn-primary'
                    = link_to '', post, :method => :delete, class: 'md md-delete btn btn-danger', :data => { :confirm => 'Are you sure?' }
