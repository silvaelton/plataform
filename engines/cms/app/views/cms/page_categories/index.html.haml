.card
  .card-header.ch-alt
    %h2
      Categoria de PÃ¡ginas
      = link_to 'Nova Categoria', new_page_category_path, class: 'btn btn-success pull-right'
      %small Listagem de categorias
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table
      %thead
        %tr
          %th #
          %th Name
          %th Status
          %th{:colspan => "3"} Actions

      %tbody
        - @page_categories.each_with_index do |page_category, i|
          %tr
            %td= i+1
            %td= page_category.title
            %td= page_category.status
            %td.col-md-2
              = link_to '', edit_page_category_path(page_category), class: 'md md-edit btn btn-primary'
              = link_to '', page_category, class: 'md md-delete btn btn-danger', :method => :delete, :data => { :confirm => 'Are you sure?' }
