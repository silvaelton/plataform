.card
  .card-header
    %h2
      Documentos
      %small Listagem de Documentos
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table.table.table-hover.table-bordered
      %thead
        %tr
          %th Número
          %th Tipo de Documento
          %th Setor
          %th Ações
      %tbody
        - @assessments.each do |a|
          %tr
            %td
              = a.document_number
            %td
              = a.document_type.name
            %td teste
            %td.col-md-2
              .btn-group
                %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
                  Ações
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to 'Editar', edit_assessment_path(a)
                  %li
                    = link_to 'Visualizar', assessment_path(a)
                  %li
                    = link_to 'Tramitar', assessments_path(a)
                  %li
                    = link_to 'Deletar', assessment_path(a), method: :delete, data: { confirm: 'Are you sure?' }