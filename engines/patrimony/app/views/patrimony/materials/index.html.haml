.card
  .card-header.ch-alt
    %h2
      Materiais
      = link_to 'novo material', new_material_path, remote: true, class: 'btn btn-success pull-right'
      %small Listagem de materiais
  .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
    %table.table.table-hover.table-bordered
      %thead
        %tr
          %th #
          %th Material
          %th Descrição
          %th Status
          %th Ações
      %tbody.index-material
        = render 'index'
