- @properties.each_with_index do |j, i|
 %tr
  %td.col-md-1
   = i + 1
  %td
   = j.name 
  %td
   = j.description
  %td
   = j.status ? "ATIVO" : "INATIVO"
  %td.col-md-2
   = link_to "", edit_property_path(j), remote: true, class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float'
   = link_to "", property_path(j), method: :delete, class: 'md-highlight-remove btn btn-danger waves-effect waves-button waves-float', data: {confirm: "#{t(:confirm_delete)}"}