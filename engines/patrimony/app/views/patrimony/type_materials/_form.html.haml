.row
 .col-md-12
  = simple_form_for @type_material, remote: true do |f|
   .row
    .col-md-12
     = f.label :name, class: 'fg-label'
     = f.input :name, label: false, input_html: { placeholder: 'Digite o material'}
   .row
    .col-md-12
     = f.label :description, class: 'fg-label'
     = f.input :description, label: false, input_html: { placeholder: 'Digite a descrição'}
   .row
    .col-md-12
     = f.label :percentage, class: 'fg-label'
     = f.input :percentage, label: false, input_html: { placeholder: 'Digite a porcentagem'}
   .row
    .col-md-12
     = f.label :life_cycle, class: 'fg-label'
     = f.input :life_cycle, label: false, input_html: { placeholder: 'Digite a vida ultil'}  
   .row 
    .col-md-12
     = f.label :status, class: 'fg-label'
     = f.input :status, label: false, input_html: { class: 'options' }
   .row
    .col-md-12
     = f.submit :submit, class: 'btn btn-success'
   %br/
