= form_for @patrimony do |f|
  - if @patrimony.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patrimony.errors.count, "error")} prohibited this patrimony from being saved:"
      %ul
        - @patrimony.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code_patrimony
    = f.text_field :code_patrimony
  .field
    = f.label :date_acquisition
    = f.date_select :date_acquisition
  .field
    = f.label :status
    = f.check_box :status
  .field
    = f.label :sector
    = f.text_field :sector
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :material
    = f.text_field :material
  .field
    = f.label :property
    = f.text_field :property
  .actions
    = f.submit 'Save'
