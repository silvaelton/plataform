= simple_form_for [:portal, @project, @enrollment, @candidate] do |f|
  .row
    .col-md-6
      = f.fields_for :properties, OpenStruct.new(@candidate.properties) do |builder|
        .row
          .col-md-12
            - @candidate.enrollment.enrollment_fields.each do |field|
              = render "#{field.field_type}_field", field: field, f: builder
  .row
    .col-md-12
      = f.button :submit