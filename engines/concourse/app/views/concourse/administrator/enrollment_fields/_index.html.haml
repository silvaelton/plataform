- @enrollment_fields.each_with_index do |e, i|
  %tr
    %td= i + 1
    %td= e.name
    %td= e.field_type
    %td= e.required ? "sim" : "não"
    %td= e.unique ? "sim" : "não"
    %td= e.status ? "ativo" : "inativo"
    %td.col-md-2
      = link_to "", concourse.edit_administrator_project_enrollment_enrollment_field_path(project_id: @project, enrollment_id: @enrollment, id: e), remote: true, class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float'
      = link_to "", concourse.administrator_project_enrollment_enrollment_field_path(project_id: @project, enrollment_id: @enrollment, id: e), method: :delete, class: 'md md-clear btn btn-danger waves-effect waves-button waves-float', data: {confirm: "#{t(:confirm_delete)}"}
