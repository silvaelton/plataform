= simple_form_for [:administrator, @project] do |f|
  .col-md-12
    .card
      .card-body.card-padding
        .row
          .col-md-6
            = f.label :name, class: 'fg-label'
            = f.input :name, label: false, input_html: { placeholder: 'Digite um nome'}
          .col-md-4
            = f.label :project_category,  class: 'fg-label'
            = f.association :project_category, label: false, prompt: 'selecione...'

        .row
          .col-md-6
            = f.label :description, class: 'fg-label'
            = f.input :description, label: false, input_html: { placeholder: 'Digite um nome'}
          .col-md-1
            = f.label :start, as: 'string', class: 'fg-label'
            = f.input :start, as: 'string', label: false, input_html: { class: 'date', placeholder: '00/00/0000'}
          .col-md-1
            = f.label :end, as: 'string', class: 'fg-label'
            = f.input :end, as: 'string', label: false, input_html:  { class: 'date', placeholder: '00/00/0000'}
        
        %br/
        .row
          .col-md-3
            = f.label :background, as: 'file', class: 'fg-label'
            = f.input :background, as: 'file', label: false, input_html: { placeholder: 'Digite um nome'}
            = image_tag @project.background_url, width: '150' if @project.background?
          .col-md-3
            = f.label :logo, as: 'file', class: 'fg-label'
            = f.input :logo, as: 'file', label: false, input_html: { placeholder: 'Digite um nome'}
            = image_tag @project.logo_url, width: '150' if @project.logo?
          .col-md-2
            = f.label :registration_fee,  class: 'fg-label'
            = f.input :registration_fee, as: 'select', label: false, prompt: 'selecione...'
          .col-md-1
            = f.label :fee_value,  class: 'fg-label'
            = f.input :fee_value, label: false, prompt: 'selecione...'
        %hr/
        .row
          .col-md-3
            .checkbox.m-b-15
              %label
                = f.check_box :status
                %i.input-helper
                Concurso ativo para visualização do público
          .col-md-3
            .checkbox.m-b-15
              %label
                = f.check_box :subscribe
                %i.input-helper
                Concurso ativo para inscrições dos candidatos
          .col-md-3
            .checkbox.m-b-15
              %label
                = f.check_box :send_project
                %i.input-helper
                Concurso ativo para o envio do projeto dos candidatos
            
        %hr/
        .row
          .col-md-12
            = f.button :submit, class: 'btn btn-success'
            = link_to "voltar", concourse.administrator_projects_path, class: 'btn btn-default'
