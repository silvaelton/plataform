= simple_form_for [:administrator, @project, @nav] do |f|
  .card
    .card-body.card-padding
      .row
        .col-md-4
          = f.label :link, class: 'fg-label'
          = f.input :link, label: false, input_html: { placeholder: 'Digite o nome do link'}
        .col-md-2
          = f.label :target, class: 'fg-label'
          = f.input :target, as: 'select', collection: Concourse::Nav.targets.keys, label: false, prompt: 'selecione...'
        .col-md-2
          = f.label :page_action, class: 'fg-label'
          = f.input :page_action, as: 'select', collection: Concourse::Nav.page_actions.keys, label: false, prompt: 'selecione...'
        .col-md-2
          = f.label :order, class: 'fg-label'
          = f.input :order, label: false, input_html: { placeholder: 'Digite a ordem do menu'}
      .row
        .col-md-4
          = f.label :page, class: 'fg-label'
          = f.association :page, label: false, prompt: 'Selecione a p√°gina...'
        .col-md-4
          = f.label :external_link, class: 'fg-label'
          = f.input :external_link, label: false, input_html: { placeholder: 'Digite a ordem do menu'}
        .col-md-2
          = f.label :publish, class: 'fg-label'
          = f.input :publish, label: false, input_html: { placeholder: 'Digite um nome'}
      .row
        .col-md-12
          = f.button :submit, class: 'btn btn-success'
          = link_to "voltar", concourse.administrator_project_pages_path(@project), class: 'btn btn-default'
  


