= simple_form_for [:administrator, @project, @nav] do |f|
  .card
    .card-body.card-padding
      .row
        .col-md-4
          = f.label :name, class: 'fg-label'
          = f.input :name, label: false, input_html: { placeholder: 'Digite o nome'}
        .col-md-2
          = f.label :target, class: 'fg-label'
          = f.input :target, as: 'select', collection: Concourse::Nav.targets.keys, label: false, prompt: 'selecione...'
        .col-md-2
          = f.label :action, class: 'fg-label'
          = f.input :action, as: 'select', collection: Concourse::Nav.actions.keys, label: false, prompt: 'selecione...'

        .col-md-2
          = f.label :father, class: 'fg-label'
          = f.association :father, label: false, prompt: 'selecione...'
      .row
        .col-md-4
          = f.label :page, class: 'fg-label'
          = f.association :page, label: false, prompt: 'Selecione a página...'
        .col-md-4
          = f.label :external_url, class: 'fg-label'
          = f.input :external_url, label: false, input_html: { placeholder: 'Digite o link externo do menu'}
      .row
        .col-md-12
          .checkbox.m-b-15
            %label
              = f.check_box :publish
              %i.input-helper
              Menu publicado para visualização
      %hr/
      .row
        .col-md-12
          = f.button :submit, class: 'btn btn-success'
          = link_to "voltar", concourse.administrator_project_navs_path(@project), class: 'btn btn-default'
  
