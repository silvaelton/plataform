- @participation_fields.each_with_index do |p, i|
  %tr
    %td= i + 1
    %td= p.name
    %td= p.field_type
    %td= p.code
    %td= p.required ? "sim" : "n√£o"
    %td= p.status ? "ativo" : "inativo"
    %td.col-md-2
      = link_to "", concourse.edit_administrator_project_participation_participation_field_path(project_id: @project, participation_id: @participation, id: p), remote: true, class: 'md-mode-edit btn btn-primary waves-effect waves-button waves-float'
      = link_to "", concourse.administrator_project_participation_participation_field_path(project_id: @project, participation_id: @participation, id: p), method: :delete, class: 'md md-clear btn btn-danger waves-effect waves-button waves-float', data: {confirm: "#{t(:confirm_delete)}"}
