%h4 
  %b
    Menu Geral
%ul.list-group
  - @project.navs.order(order: :desc).each do |n|  
    %li.list-group-item
      - if n.link_interno?
        = link_to "#{n.link}", concourse.portal_project_page_path(project_id: @project, id: n.page.id) if n.page.present?
      - elsif n.link_externo?
        = link_to "#{n.link}", "http://#{n.external_link}"
      - elsif n.envio_projeto?
        = link_to "#{n.link}"
      - elsif n.consulta?
        = link_to "#{n.link}", concourse.new_portal_consultation_path
      - elsif n.inscricao?
        = link_to "#{n.link}", concourse.new_portal_project_subscribe_path(@project)

