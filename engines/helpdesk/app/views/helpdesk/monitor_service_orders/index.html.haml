.card
  .card-header.bgm-red
    %h2
      Ordem de serviço #
      = @order_service.number
    %ul.actions
      %li
        %a{:href => "", :alt => "Cancelar"}
          %i.md.md-local-hotel
      %li
        %a{:href => ""}
          %i.md.md-people
      %li
        %a{:href => ""}
          %i.md.md-favorite-outline
      %li
        %a{:href => ""}
          %i.md.md-print
  = simple_form_for(@order_service) do |f|
    .card-body.card-padding
      .row
        .col-md-8
          = f.label "Solicitante:", class: 'fg-label'
          = @order_service.required_by_id
          %br
          = f.label "Setor:", class: 'fg-label'
          = @order_service.sector_id
          %br
          = f.label "Status:", class: 'fg-label'
          = @order_service.status.name
          %br
          = f.label "Ramal:", class: 'fg-label'
          = @order_service.branch_line.telephone
          %br
          = f.label "Responsável:", class: 'fg-label'
          
        .col-md-4
          .card
            .card-header
              %h6
                = f.label "Etiqueta", class: 'fg-label'
                = @order_service.good.code_goods
              %h6
                = f.label "Material:", class: 'fg-label'
                = @order_service.good.material.name 
              %h6
                = f.label "Nº de Seriel: 851984", class: 'fg-label'
                 

      .row
        .col-md-12
          .card
            .card-header.ch-alt
              %h5
                Apontamentos
              %ul.actions
                %li
                  = link_to '<i class="md md-add-circle"></i>'.html_safe, new_order_service_monitor_service_order_path, remote: true, class: ' pull-right'
            .card-body.card-padding
              .table-responsive{:style => "overflow: hidden; outline: none;", :tabindex => "3"}
                %table#data-table-command.table.table-striped.table-vmiddle.bootgrid-table
                  %thead
                    %tr
                      %th #
                      %th Imagem
                      %th Apontamento
                      

                  %tbody
                  - @monitor_service_orders.each_with_index do |j, i|
                    %tr
                      %td
                        = j.id
                      %td
                      
                        %image_tag

                        = link_to '<i class="md md-attachment"></i>'.html_safe, new_order_service_monitor_service_order_path, remote: true
                        

                      %td
                        = j.appointment
                        %ul.actions.pull-right
                          %li
                          %br
                            = f.label "Autor:", class: 'fg-label'  
                            = j.user 
                            = f.label "Data/Hora:", class: 'fg-label'  
                            = j.created_at.strftime("%d/%m/%Y - %H:%M") 
